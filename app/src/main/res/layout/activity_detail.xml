<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/nameTextInDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="HP: "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hpTextInDetail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="80"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePokemonInDetail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pokemon_cardback" />

        <ListView
            android:id="@+id/pokemonSkillList"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>

    <Button
        android:id="@+id/btnTrainInDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:onClick="onClick"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Train" />

    <Button
        android:id="@+id/btnReturnInDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:onClick="onClick"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:text="Return" />

</LinearLayout>
